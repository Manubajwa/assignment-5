<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <td><a href="/posts?category={{this._id}}">{{this._id}}</a></td>
                            <td><a href="/posts?category={{this._id}}">{{this.name}}</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{#unless categories}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
            {{/unless}}
        </div>
    </div>
</div>
